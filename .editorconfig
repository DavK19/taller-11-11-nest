# EditorConfig for NestJS (TypeScript) projects
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx,html,css,scss,less,graphql}]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true
max_line_length = off

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
trim_trailing_whitespace = false

{*.png,*.jpg,*.jpeg,*.gif,*.ico,*.zip,*.jar,*.exe}
trim_trailing_whitespace = false
insert_final_newline = false